<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.captureegg.imagedisplay.ImageDisplayActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/backicon"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:translationZ="12dp"
        app:tint="@color/seed" />

    <ImageView
        android:id="@+id/rotateButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:translationZ="12dp"
        android:src="@drawable/rotateicon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:tint="@color/seed"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:translationZ="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/seed"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/set_image_name" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_dark_background"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_marginEnd="90dp">

        <EditText
            android:id="@+id/photonameEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:padding="15dp"
            android:background="@null"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/uploadButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/md_theme_light_primary"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/uploadicon"
            app:tint="@color/seed" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>